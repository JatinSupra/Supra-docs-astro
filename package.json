{
  "name": "solstice",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "winsearch": "robocopy dist/pagefind public/pagefind /E",
    "osxsearch": "cp -r dist/pagefind public/",
    "docs:config-i18n": "node ./src/docs/scripts/docs-config-i18n.js",
    "config-i18n": "node ./scripts/config-i18n.js",
    "format": "eslint . --fix && prettier -w . --ignore-unknown --cache",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --coverage.include=\"src/js/mos/**\""
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.1",
    "@astrojs/rss": "4.0.12",
    "@astrojs/sitemap": "3.4.1",
    "@expressive-code/plugin-line-numbers": "^0.41.3",
    "@fontsource-variable/geist": "5.2.6",
    "@fontsource-variable/geist-mono": "5.2.6",
    "@pagefind/default-ui": "1.3.0",
    "@tabler/icons": "3.34.1",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/vite": "4.1.11",
    "astro": "5.12.3",
    "astro-auto-import": "0.4.4",
    "astro-expressive-code": "0.41.3",
    "astro-icon": "1.1.5",
    "astro-seo": "0.8.4",
    "motion": "12.23.9",
    "motion-on-scroll": "^1.0.0",
    "swiper": "11.2.10",
    "tailwind-variants": "1.0.0",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "1.3.6"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@playform/compress": "0.2.0",
    "eslint": "9.32.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.3.0",
    "pagefind": "1.3.0",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript-eslint": "8.38.0"
  },
  "overrides": {
    "sharp": "^0.33.0"
  }
}
